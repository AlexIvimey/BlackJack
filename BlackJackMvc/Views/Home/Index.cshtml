
@{
    ViewData["Title"] = "Black Jack";
}
<div class="allButFooter">
    

    <div >
        <form >
            <strong><input type="text" id="bet-box" name="betInput" hidden required/></strong>

            <label style="font-weight:bold; color:white">Bet 25</label>
            <input type="image" src="~/images/518-5181524_red-poker-chip-png-transparent-png.png" style="height:100px; width:100px" onclick="betFunction1()"/>
            <label style="font-weight:bold; color:white">Bet 50</label>
            <input type="image" src="~/images/107588.png" style="height:100px; width:100px" onclick="betFunction2()"/>
            <label style="font-weight:bold; color:white">Bet 100</label>
            <input type="image" src="~/images/1254315.png" style="height:100px; width:100px" onclick="betFunction3()"/>


            <center>
                <label for="name-box" style="font-weight:bold; color:white">Enter your name:</label>
                <strong><input type="text" id="name-box" name="nameInput" required/></strong>
            </center>

            <center>
                <button asp-controller="Game" asp-action="Start" class="btn-primary" style="font-size: 20px; height: 50px; width: 200px; margin-top: 20px; border: none; border-radius: 20px; padding: 5px; border-block-color: black">Start Game</button>
            </center>

        </form>
    </div>
</div>





<script>
    function betFunction1() {
        document.getElementById("bet-box").value = "25";
    }
    function betFunction2() {
        document.getElementById("bet-box").value = "50";
    }
    function betFunction3() {
        document.getElementById("bet-box").value = "100";
    }
</script>


<style>
    body {
        background-image: url('https://wallpaperaccess.com/full/2434392.png');
        
    }   
    form{
        position:relative;
        top:500px;
        height:200px;
        width:200px;
        
        
    }
    .allButFooter{
        min-height: calc(100vh - 40px);
    }
    input:hover{
        padding:5px;
    }
    .btn-primary:hover{
        background-color:white;
        color:black;
        
    }
    #name-box:hover{
        padding:0px;
    }
</style>